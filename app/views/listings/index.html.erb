<div class="list">
  <div class="row">
    <div class="small-10 small-centered columns">
      <div class="row">
	<div class="small-6 columns">
	  <h4 class="subheading">People</h4>
	</div>
	<div class="small-6 columns">
	  <%= button_to 'New listing', new_listing_path, class: 'tiny button', :method => :get %>
	</div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-10 small-centered columns">
      <ul class="small-block-grid-3">
        <li><b>Name</b></li>
        <li><b>Age</b></li>
        <li><b>Email</b></li>
	<% @listings.each do |listing| %>
	  <li><%= link_to "#{listing.first_name} #{listing.last_name}", listing %></li>
	  <li><%= (Date.today - listing.dob).to_i / 365 %></li>
	  <li><%= listing.email %></li>
	<% end %>
      </ul>
    </div>
  </div>
</div>

